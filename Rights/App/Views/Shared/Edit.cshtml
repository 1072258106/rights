<div class="portlet light bordered">
    @RenderBody()
</div>
<!-- 验证 -->
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


<script type='text/javascript'>

    $(function () {

        $("form").submit(function (form) {

            if (form.result) {
             
                $.ajax({
                    url: this.action,
                    type: "Post",
                    data: $(this).serialize(),
                    dataType: "json",
                    success: function (data) {

                        $.confirm({
                            title: '操作提示',
                            content: data,
                            buttons: {
                                ok: {
                                    text: "继续!",
                                    btnClass: 'btn-primary',
                                    keys: ['enter'],
                                    action: function () {
                                        console.log('the user clicked confirm');
                                    }
                                },
                                cancel: {
                                    text: "返回!",
                                    btnClass: 'btn',

                                    action: function () {
                                        console.log('s');
                                    }
                                }
                            }
                        });

                        if (data.code == 1) {
                            $.alert({
                                title: '操作提示',
                                content: data,
                                confirmButton: '确定',
                                backgroundDismiss: false,
                                autoClose: 'confirm|2000',
                                confirm: function () {
                                    alert(2);
                                 //   ShowInfo(data.newid, '');
                                }
                            });
                        }
                        else {

                        }

                    }
                });
            }
            return false;
        });

    });
</script>

